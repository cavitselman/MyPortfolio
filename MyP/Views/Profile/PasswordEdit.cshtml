@model UserPasswordEditViewModel
@{
    ViewData["Title"] = "PasswordEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şifre Değiştirme</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yeni Şifreniz</label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="Şifreniz">
                        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yeni Şifre Tekrar</label>
                        <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputName1" placeholder="Şifre Tekrar">
                        @Html.ValidationMessageFor(x => x.PasswordConfirm, null, new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>